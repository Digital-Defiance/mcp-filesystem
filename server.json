{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-10-17/server.schema.json",
  "name": "io.github.Digital-Defiance/mcp-filesystem",
  "description": "Advanced filesystem operations with batch ops, watching, search, checksums, and strict security.",
  "version": "0.1.0",
  "homepage": "https://github.com/Digital-Defiance/ai-capabilities-suite/tree/main/packages/mcp-filesystem",
  "license": "MIT",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "@ai-capabilities-suite/mcp-filesystem",
      "version": "0.1.0",
      "transport": {
        "type": "stdio"
      }
    },
    {
      "registryType": "oci",
      "identifier": "digitaldefiance/mcp-filesystem:latest",
      "transport": {
        "type": "stdio"
      }
    }
  ],
  "capabilities": {
    "tools": [
      "fs_batch_operations",
      "fs_watch_directory",
      "fs_get_watch_events",
      "fs_stop_watch",
      "fs_search_files",
      "fs_build_index",
      "fs_create_symlink",
      "fs_compute_checksum",
      "fs_verify_checksum",
      "fs_analyze_disk_usage",
      "fs_copy_directory",
      "fs_sync_directory"
    ]
  },
  "categories": [
    "filesystem",
    "file-management",
    "security",
    "development-tools"
  ],
  "keywords": [
    "filesystem",
    "file-operations",
    "batch-operations",
    "directory-watching",
    "file-search",
    "file-indexing",
    "security",
    "checksums",
    "symlinks",
    "disk-usage"
  ]
}
